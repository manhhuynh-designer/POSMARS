rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // 1. Allow Public Read (Needed for WebAR to load assets)
      allow read: if true;
      
      // 2. DENY PUBLIC WRITE
      // Since we use Signed URLs generated by Admin SDK (which bypasses rules),
      // we can strictly deny all direct client-side writes here.
      allow write: if false; 
    }
  }
}
